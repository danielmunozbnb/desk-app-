{
  "id": "maintainAreas",
  "include": [
        "wql.script"
  ],
  "endPoints": [
    {
      "baseUrlType": "WORKDAY-WQL",
      "name": "allLocations",
      "authType": "sso",
      "url": "data?query=SELECT%20locationName%2C%20workdayID%20FROM%20locations%20(locationUsagesForLocation%20%3D%20(46db411c4a5245fbb39834d8b2cba049))"
    },
    {
      "name": "areas",
      "baseUrlType": "app",
      "url": "areas",
      "authType": "sso"
    },
    {
      "name": "getAreasByLocation",
      "baseUrlType": "WORKDAY-WQL-QUERY",
      "url": "<% wql.getAreasByLocation(location) %>",
      "authType": "sso",
      "deferred": true
    }
  ],
  "script": "<%
             var fillAreas = function(location) {
                 if (empty location) {
                     return [];
                 }

                 var areas = getAreasByLocation.invoke({'location': location}).data;
                 var validAreas = [];
                 for (var area : areas) {
                     validAreas.add({'id': area.Area.id, 'name': area.name, 'location': area.location, 'description': area.description, 'inUse': area.inUse});
                 }
                 return validAreas;


             };
             %>",
  "onLoad":"<%
            console.debug(flowVariables.location);

            var areas = fillAreas(flowVariables.location);
            pageVariables.areas = areas;
            %>",
  "presentation": {
    "headerSize": "VPS_DEFAULT",
    "pageType": "view",
    "title": {
      "type": "title",
      "label": "<%'Maintain Areas'%>"
    },
    "body": {
      "type": "section",
      "horizontal": false,
      "children": [
        {
          "type": "grid",
          "id": "gridAreas",
          "label": "<%'Areas'%>",
          "rows": "<% pageVariables.areas %>",
          "rowVariableName": "row",
          "columns": [
            {
              "type": "column",
              "columnId": "nameColumnId",
              "label": "Name",
              "cellTemplate": {
                "type": "text",
                "id": "areaName",
                "value": "<% row.name %>"
              }
            },
            {
              "type": "column",
              "columnId": "locationColumnId",
              "label": "Location",
              "cellTemplate": {
                "type": "text",
                "id": "areaName",
                "value": "<% row.location.descriptor %>"
              }
            },
            {
              "type": "column",
              "columnId": "floorColumnId",
              "label": "Descripci√≥n",
              "cellTemplate": {
                "type": "text",
                "id": "areaFloor",
                "value": "<% row.description %>"
              }
            },
            {
              "type": "column",
              "columnId": "inUseColumnId",
              "label": "en uso",
              "cellTemplate": {
                "type": "text",
                "id": "areaUse",
                "value": "<% row.inUse %>"
              }
            },
            {
              "type": "column",
              "columnId": "columnEdit",
              "cellTemplate": {
                "type": "section",
                "children": [
                  {
                    "type": "button",
                    "action": "PRIMARY",
                    "label": "Edit",
                    "taskReference": {
                      "taskId": "editArea",
                      "parameterBindings": {
                        "areaId": "<% row.id %>",
                        "locationId": "<% row.location.id %>"
                      }
                    }
                  }
                ]
              }
            },
            {
              "type": "column",
              "columnId": "columnDelete",
              "cellTemplate": {
                "type": "section",
                "children": [
                  {
                    "type": "button",
                    "action": "PRIMARY",
                    "label": "Delete",
                    "taskReference": {
                      "taskId": "deleteArea",
                      "parameterBindings": {
                        "areaId": "<% row.id %>"
                      }
                    }
                  }
                ]
              }
            }
          ]
        },
        {
          "type": "button",
          "label": "New Area",
          "action": "PRIMARY"
        }

      ]
    },
    "footer": {
      "type": "footer",
      "children": [
        {
          "type": "pod",
          "podId": "backHome"
        }
      ]
    }
  }
}